<header class=" top-0 left-0 w-full z-50 px-6 py-6 md:px-12 flex justify-between items-center bg-transparent pointer-events-none">
    <a href="/portfolio" id="logo-link" class="text-xl font-heading font-normal tracking-wide pointer-events-auto text-black z-50 relative transition-colors duration-300">
        Matheus Melo
    </a>

    <button id="menu-toggle" class="pointer-events-auto transition-colors duration-300 p-2 z-50 relative group text-black hover:opacity-70 cursor-pointer">
        <span class="sr-only">Menu</span>
        <div class="space-y-2 group-data-[open]:space-y-0">
             <span class="block w-8 h-1 bg-current transition-transform duration-300 group-data-[open]:rotate-45 group-data-[open]:translate-y-3"></span>
             <span class="block w-8 h-1 bg-current transition-opacity duration-300 group-data-[open]:opacity-0"></span>
             <span class="block w-8 h-1 bg-current transition-transform duration-300 group-data-[open]:-rotate-45"></span>
        </div>
    </button>

    <!-- Full Screen Menu Overlay -->
    <div id="fullscreen-menu" class="fixed inset-0 bg-black text-white z-40 translate-x-full transition-transform duration-500 ease-in-out flex flex-col items-center justify-center pointer-events-auto w-screen h-screen">
        <nav class="space-y-8 text-center">
            <a href="/portfolio/about" class="block text-3xl md:text-5xl font-heading font-medium hover:text-purple-400 transition-colors menu-link">Sobre</a>
            <a href="/portfolio/experiences" class="block text-3xl md:text-5xl font-heading font-medium hover:text-purple-400 transition-colors menu-link">ExperiÃªncias</a>
            <a href="/portfolio/#work" class="block text-3xl md:text-5xl font-heading font-medium hover:text-purple-400 transition-colors menu-link">Trabalhos</a>
            <a href="/portfolio/#contact" class="block text-3xl md:text-5xl font-heading font-medium hover:text-purple-400 transition-colors menu-link">Contato</a>
        </nav>
    </div>
</header>

<script>
    const menuToggle = document.getElementById('menu-toggle');
    const menu = document.getElementById('fullscreen-menu');
    const menuLinks = document.querySelectorAll('.menu-link');
    const logoLink = document.getElementById('logo-link');

    if (menuToggle && menu && logoLink) {
        const toggleMenu = () => {
             const isOpen = menu.classList.contains('translate-x-0');
            
            if (isOpen) {
                // Close
                menu.classList.remove('translate-x-0');
                menu.classList.add('translate-x-full');
                menuToggle.removeAttribute('data-open');
                
                // Toggle Color: Back to Black
                menuToggle.classList.remove('text-white');
                menuToggle.classList.add('text-black');
                logoLink.classList.remove('text-white');
                logoLink.classList.add('text-black');
                
                // Allow scrolling again
                document.body.style.overflow = '';
            } else {
                // Open
                menu.classList.add('translate-x-0');
                menu.classList.remove('translate-x-full');
                menuToggle.setAttribute('data-open', 'true');
                
                // Toggle Color: White
                menuToggle.classList.remove('text-black');
                menuToggle.classList.add('text-white');
                logoLink.classList.remove('text-black');
                logoLink.classList.add('text-white');
                
                // Prevent scrolling when menu is open
                document.body.style.overflow = 'hidden';
            }
        };

        menuToggle.addEventListener('click', toggleMenu);

        // Close menu on link click
        menuLinks.forEach(link => {
            link.addEventListener('click', toggleMenu);
        });

        // Close on background click
        menu.addEventListener('click', (e) => {
             if (e.target === menu) {
                 toggleMenu();
             }
        });
    }
</script>
